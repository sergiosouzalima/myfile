<div ="box">
	<div class="block" id="block-login">
		<h2>Login Box</h2>
		<div class="content login">
			<div class="flash">
	          <% flash.each do |type, message| -%>
	            <div class="message <%= type %>">
	              <p><%= message %></p>
	            </div>
	          <% end -%>
	        </div>
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), 
			    :html => { :class => "form login" }) do |f| %>          
				<br />
				<div class="group wat-cf">
					<div class="left">
						<%= f.label :email, t("activerecord.attributes.user.email", :default => "Email"), 
						    :class => "label right" %>
					</div>
					<div class="right">
						<%= f.text_field :email, :class => 'text_field' %>
						<span class="description">Ex: joao_da_silva@myhost.com.br</span>
					</div>
				</div>

				<div class="group wat-cf">
					<div class="left">
						<%= f.label :password, t("activerecord.attributes.user.password", :default => "Senha"), 
						    :class => "label right" %>
					</div>
					<div class="right">
						<%= f.password_field :password, :class => 'text_field' %>
						<span class="description">Ex: digite a senha registrada anteriormente</span>
					</div>
				</div>

				<% if devise_mapping.rememberable? -%>
					<div class="group wat-cf">
						<div class="left">
							<%= f.label :remember_me, t("activerecord.attributes.user.remember_me", 
							   :default => "Lembre-me"), :class => "label right" %>
						</div>
						<div class="right">
							<%= f.check_box :remember_me %>               
						</div>
					</div>
				<% end -%>

				<div class="group wat-cf">
					<div class="right" style="width: 270px;" >
						<button class="button" type="submit">
							<%= image_tag("web-app-theme/icons/key.png", :alt => "#{t("web-app-theme.save", 
							:default => "Login")}") %> 
							<%= t("web-app-theme.confirm2", :default => "Sign in") %>
						</button>
					</div>
				</div>
			<% end %>
			<%= render :partial => "devise/shared/links" %>		
		</div>	
	</div>
</div>