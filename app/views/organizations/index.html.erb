<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", organizations_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_organization_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "All")  %> <%= Organization.model_name.human %></h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.organization.name", :default => t("activerecord.labels.name", :default => "Name")) %>
          </th>
                    <th><%= t("web-app-theme.created_at", :default => "Created at")  %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @organizations.each do |organization| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= organization.id %>
          </td>
                    <td>
            <%= link_to organization.name, organization_path(organization) %>
          </td>
                    <td>
            <%= l(organization.created_at, :format => :short) %>
          </td>
          <td class="last">
            <%= link_to "#{t("web-app-theme.show", :default => "Show")}", organization_path(organization) %> |
            <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_organization_path(organization) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", organization_path(organization), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
        <%= will_paginate @organizations, :previous_label => 'Anterior', :next_label => 'PrÃ³xima'  %>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
