<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", occupations_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_occupation_path %></li>
